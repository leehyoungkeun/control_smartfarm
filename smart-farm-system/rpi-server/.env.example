# SQLite 데이터베이스
DB_PATH=./data/smartfarm.db

# JWT 인증 (로컬)
JWT_SECRET=your_local_jwt_secret

# AWS IoT Core
AWS_IOT_ENDPOINT=a2ybxz5mrpnfww-ats.iot.ap-northeast-2.amazonaws.com
AWS_IOT_CERT_PATH=/home/lhk/certs/certificate.pem.crt
